<resources>

    <color name="actionbar_bg_color">#EEEEEE</color>
    <color name="actionbar_text_color">#2EBD59</color>
    <color name="color_primary_dark">#004D40</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Set AppCompatâ€™s actionBarStyle -->
        <item name="actionBarStyle">@style/PzActionBarStyle</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/actionbar_bg_color</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="PzActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/actionbar_bg_color</item>
        <item name="android:titleTextStyle">@style/PzActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_bg_color</item>
        <item name="titleTextStyle">@style/PzActionBarTitleText</item>
    </style>

    <style name="PzActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

</resources>
